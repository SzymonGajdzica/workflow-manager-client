<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/taskDetailsManagerReportDescription"
        tools:text="Very long description of task"
        android:textAppearance="?attr/textAppearanceBody2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:background="@color/secondaryBackgroundColor"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="150dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/taskDetailsManagerReportDate"
        tools:text="00:34:23 2019"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        app:layout_constraintTop_toBottomOf="@id/taskDetailsManagerReportDescription"
        app:layout_constraintStart_toStartOf="@id/taskDetailsManagerReportDescription"
        app:layout_constraintEnd_toEndOf="@id/taskDetailsManagerReportDescription"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/taskDetailsManagerReportFixTask"
        android:stateListAnimator="@null"
        android:text="@string/fixTask"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:layout_constraintTop_toBottomOf="@id/taskDetailsManagerReportDate"
        app:layout_constraintStart_toStartOf="@id/taskDetailsManagerReportDescription"
        app:icon="@drawable/ic_baseline_list_24"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>