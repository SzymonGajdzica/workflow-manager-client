<?xml version="1.0" encoding="utf-8"?>
<layout >

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="pl.polsl.workflow.manager.client.ui.coordinator.localization.LocalizationCoordinatorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.coordinator.localization.LocalizationCoordinatorFragment">

        <fragment
            android:id="@+id/coordinatorLocalizationMapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/coordinatorLocalizationAddLocalization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/addLocalization"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="@id/coordinatorLocalizationMapFragment"
            app:layout_constraintEnd_toEndOf="@id/coordinatorLocalizationMapFragment"
            app:srcCompat="@drawable/ic_baseline_add_24"/>

        <include
            android:id="@+id/coordinatorLocalizationLoadingView"
            layout="@layout/loading_view"
            tools:visibility="gone"
            android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}"/>

        <include
            android:id="@+id/coordinatorLocalizationFailedToLoadView"
            layout="@layout/failed_to_load_view"
            tools:visibility="gone"
            android:visibility="@{viewModel.error != null ? View.VISIBLE : View.GONE}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>